<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <!--how to stack login and signup on top of each other-->
        <!--Fix the huge button by putting it all inside of a container-->
            <div style="width: 30%; margin: 25px auto;">
                <!--Must find comment id and then add it in correctly-->
                <!--PAss in a campground object so we don't have to use the whole campground-->
                <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                    <div class ="form-group">
                         <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"> 
                    </div>
                    <div class ="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form> 
                <a href="/campgrounds">Go Back</a>
            </div>
        
        
    </div>
</div>


